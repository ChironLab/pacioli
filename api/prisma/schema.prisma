// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum AccountType {
  ASSET
  LIABILITY
  EQUITY
  REVENUE
  EXPENSE
}

model Account {
  id               Int           @id
  name             String
  account_type     AccountType
  entries          Entry[]
  active           Boolean       @default(true)
}

enum JournalType {
  TRANSACTION
  ADJUSTMENT
}

model Journal {
  id          String       @id @default(uuid()) @db.Uuid
  updated_at  DateTime     @updatedAt
  created_at  DateTime     @default(now())
  locked      Boolean      @default(false)
  posted_on   DateTime     @default(now())
  journal_type        JournalType
  entries     Entry[]
  transaction Transaction?
  adjustment  Adjustment?
}

model Entry {
  id         String  @id @default(uuid()) @db.Uuid
  account_id Int
  account    Account @relation(fields: [account_id], references: [id])
  journal_id String  @db.Uuid
  journal    Journal @relation(fields: [journal_id], references: [id])
  amount     Float
}

model Adjustment {
  id          String  @id @default(uuid()) @db.Uuid
  description String
  journal_id  String  @db.Uuid
  journal     Journal @relation(fields: [journal_id], references: [id])
}

enum TransactorType {
  CUSTOMER
  VENDOR
}

model Transactor {
  id          String         @id @default(uuid()) @db.Uuid
  name        String
  address     String?
  phone       String?
  ein         String?
  active      Boolean        @default(true)
  type        TransactorType
  meta        Json?
  transaction Transaction[]
}

enum TransactionType {
  VENDOR_INVOICE
  CUSTOMER_INVOICE
  RECEIPT
  PAYMENT
}

model Transaction {
  id              String          @id @default(uuid()) @db.Uuid
  transactor_id   String          @db.Uuid
  transactor      Transactor      @relation(fields: [transactor_id], references: [id])
  journal_id      String          @db.Uuid
  journalEntry    Journal         @relation(fields: [journal_id], references: [id])
  transactionType TransactionType
  description     String?
  meta            Json?
}
